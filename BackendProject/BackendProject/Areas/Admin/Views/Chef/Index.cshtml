@model IEnumerable<Chef>
@{
	ViewData["Title"] = "Index";
}

<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Services</h4>
					<div class="table-responsive">

						<a class="btn btn-primary" asp-action="Create">Create</a>

						<table class="table">
							<thead>
								<tr>
									<th>fullname</th>
									<th>Image</th>
									<th>Socila Media</th>
									<th>Experience</th>
									<th>Actions</th>


								</tr>
							</thead>
							<tbody>
								@foreach (var chef in Model)
								{
									<tr>
										<td>@chef.Name</td>
										<td>
											<img src="~/assets/images/@chef.Image" />
										</td>
										<td>
											<ul>
												@foreach (var social in chef.SocialMedias)
												{
													<li>
														<a href="#">
															<i class="fa-brands fa-@social.Social"></i>
														</a>
													</li>
												}
											</ul>
										</td>
										<td>@chef.ExperienceInYears</td>
										<td>
											<a class="btn btn-success" asp-action="Detail" asp-route-id="@chef.Id">Detail</a>
											<a class="btn btn-warning" asp-action="Update" asp-route-id=@chef.Id>Update</a>
											<a class="btn btn-danger @(ViewBag.Count == 1 ? "disabled" : "")" asp-action="Delete" asp-route-id=@chef.Id>Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@using BackendProject.Areas.Admin.ViewModels;
@model MenuViewModel
@{
    ViewData["Title"] = "Menu Update";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input class="form-control" asp-for="Image" type="file"  placeholder="Upload an image">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Enter name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Price">Price</label>
                            <input class="form-control" asp-for="Price" placeholder="Enter price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="MenuCategoryId">Categories</label>
                            <select class="form-control" asp-for="MenuCategoryId">
                                @foreach (MenuCategory menuCategory in ViewBag.MenuCategories)
                                {
                                    <option value="@menuCategory.Id">@menuCategory.Name</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning mr-2">Update</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


